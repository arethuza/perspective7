# Initial items to be load into Perspective database
[
    # / account
    {
        "path": "/",
        "type": "account",
        "title": "Root Account"
    },
    # /system folder
    {
        "path": "/system",
        "type": "folder",
        "title": "System folder holding items used by Perspective"
    },
    # /system/types folder
    {
        "path": "/system/types",
        "type": "folder",
        "title": "Items defining types for Items"
    },

    # Types ------------------

    # item type
    {
        "path": "/system/types/item",
        "type": "type",
        "title": "Item Type",
        "props": {
            "item_class": "items.item.Item"
        }
    },

    # item type template
    {
        "path": "/system/types/item/template",
        "type": "item",
        "title": "New Item"
    },

    # type type
    {
        "path": "/system/types/type",
        "type": "type",
        "title": "Type Type",
        "props": {
            "item_class": "items.type_item.TypeItem"
        }
    },
    # account type
    {
        "path": "/system/types/account",
        "type": "type",
        "title": "Account Type",
        "props": {
            "item_class": "items.account_item.AccountItem"
        }
    },
    # folder type
    {
        "path": "/system/types/folder",
        "type": "type",
        "title": "Folder Type",
        "props": {
            "item_class": "items.folder_item.FolderItem"
        }
    },

    # user type
    {
        "path": "/system/types/user",
        "type": "type",
        "title": "User Type",
        "props": {
            "item_class": "items.user_item.UserItem"
        }
    },

    # user type template
    {
        "path": "/system/types/user/template",
        "type": "user",
        "props": {
            "password_hash": ""
        }
    },

    # file type
    {
        "path": "/system/types/file",
        "type": "type",
        "title": "File Type",
        "props": {
            "item_class": "items.file_item.FileItem"
        }
    },

    # file type template
    {
        "path": "/system/types/file/template",
        "type": "user",
        "props": {
            "file_version": 0
        }
    },

    # Users ------------------
    {
        "path": "/users",
        "type": "folder",
        "title": "Users folder"
    },

    {
        "path": "/users/system",
        "type": "user",
        "title": "System User"
    },

    # Somewhere to put non-root accounts
    {
        "path": "/home",
        "type": "folder",
        "title": "Home folder where user accounts live"
    }
]